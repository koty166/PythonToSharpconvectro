<Styles
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Kyrs.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

   <Style Selector="Button.btn /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="15,15,15,15" />
        </Style>
        <Style Selector="Button.btn">
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Background" Value="#FFE88282" />
        </Style>
        <Style Selector="Button:pointerover.btn /template/ ContentPresenter">
            <Setter Property="BorderBrush" Value="#FFE88282" />
        </Style>
</Styles>